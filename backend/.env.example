# EU AI Act Compliance Bot - Environment Configuration

# Application Settings
APP_NAME=EU AI Act Compliance Bot
VERSION=0.1.0
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/eu_ai_act_bot
# Alternative for development:
# DATABASE_URL=sqlite:///./eu_ai_act_bot.db

# Or individual PostgreSQL settings
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eu_ai_act_bot

# AI Service APIs
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here_optional

# Vector Database (choose one)
# Pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp

# Chroma (if using local Chroma instead of Pinecone)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://eu-ai-act-bot.vercel.app

# Security & Auth
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour

# Analysis Configuration
MAX_ANALYSIS_LENGTH=50000  # Maximum characters in AI system description
DEFAULT_TEMPERATURE=0.1   # Low temperature for consistent analysis
MAX_TOKENS=4000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=INFO

# Development Settings
RELOAD=true  # Auto-reload on code changes (dev only)